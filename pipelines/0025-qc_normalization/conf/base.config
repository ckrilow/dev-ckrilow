// General resource configuration applicable to all profiles

process {
    // error strategy
    // errorStrategy = 'retry'
    errorStrategy = 'terminate'
    maxRetries = 1

    // basic resources
    cpus = 1
    //time = { 20.m * task.attempt }

    // process-specific resources
    withName: merge_samples {
        memory = { 15.GB * task.attempt }
    }
} // end process

timeline {
    enabled = true
}
